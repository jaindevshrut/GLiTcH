{
  "manifest_version": 3,
  "name": "AI Audio Detector",
  "version": "1.1.0",
  "description": "Real-time detection of AI-generated audio during meetings and interviews",
  "permissions": [
    "storage",
    "tabCapture",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "host_permissions": [
    "https://api.aurigin.ai/*",
    "https://huggingface.co/*",
    "https://*.hf.space/*",
    "https://meet.google.com/*",
    "https://zoom.us/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://*.webex.com/*"
  ]
}
